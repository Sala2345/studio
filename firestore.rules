
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // designRequests collection
    match /designRequests/{requestId} {
      // Anyone can create a new design request.
      allow create: if true;
      
      // Only authenticated users (admins) can read, update, or delete.
      allow get, update, delete: if request.auth != null;
    }

    // This rule allows the collection group query for 'designRequests'
    // It is required for the admin log page to fetch all requests.
    match /{path=**}/designRequests/{requestId} {
      // Only authenticated users can list all requests across all customers.
      allow list: if request.auth != null;
    }

    // Default deny all other collections/documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
