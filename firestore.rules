
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public creation of design requests
    match /designRequests/{requestId} {
      allow create: if true;
      
      // Allow read access only to specific admin emails
      allow get: if request.auth != null && request.auth.token.email in ['david@craniumx.ca', 'davidhayribs@gmail.com'];
      
      // Deny updates and deletes from anyone for now
      allow update, delete: if false;
    }

    // Allow listing of all design requests only for specific admin emails
    match /{path=**}/designRequests/{requestId} {
      allow list: if request.auth != null && request.auth.token.email in ['david@craniumx.ca', 'davidhayribs@gmail.com'];
    }

    // Default deny all other collections/documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
