
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public creation of customer and design request documents
    match /customers/{customerId} {
      allow create: if true;
      // Authenticated users can manage their own data
      allow get, list, update, delete: if request.auth != null;
    }

    match /customers/{customerId}/designRequests/{designRequestId} {
      allow create: if true;
      // Allow authenticated users to get/update their own requests
      allow get, update, delete: if request.auth != null;
    }

    // Allow any authenticated user to list all design requests via a collection group query.
    match /{path=**}/designRequests/{designRequestId} {
      allow list: if request.auth != null;
    }

    // File metadata rules
    match /files/{fileId} {
      allow get, list: if true; // Public read for file metadata
      allow create: if true;     // Public create for file uploads
      deny update, delete;       // Disallow modification
    }
  }
}
