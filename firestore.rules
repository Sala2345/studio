
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public creation of design requests
    match /designRequests/{requestId} {
      allow create: if true;
      
      // Allow public read access to design requests
      allow get: if true;
      
      // Deny updates and deletes from anyone for now
      allow update, delete: if false;
    }

    // Allow public listing of all design requests for the log page
    match /{path=**}/designRequests/{requestId} {
      allow list: if true;
    }

    // Default deny all other collections/documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
